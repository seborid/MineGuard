<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/item_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="主井皮带机 #1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="所属区域: 东区"
            android:textSize="13sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_item_center"
            app:layout_constraintTop_toBottomOf="@id/item_device_name"/>

        <TextView
            android:id="@+id/item_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="IP地址: 192.168.1.10"
            android:textSize="13sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_item_center"
            app:layout_constraintTop_toBottomOf="@id/item_area"/>

        <TextView
            android:id="@+id/item_device_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="设备类型: DHH"
            android:textSize="13sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_item_center"
            app:layout_constraintTop_toBottomOf="@id/item_ip"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_item_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/item_algo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="算法服务器: SVR-01"
            android:textSize="13sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="@id/guideline_item_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_area" />

        <TextView
            android:id="@+id/item_alarm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="报警类型: 异物检测"
            android:textSize="13sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="@id/guideline_item_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_algo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>