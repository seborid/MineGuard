<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".preview.PreviewFragment">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- 左侧操作区 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_button_outline"
                android:text="↻"
                android:textSize="16sp"
                android:textColor="@color/primary_blue"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="摄像头监控"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 中间空白区域 -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 右侧操作区 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_device_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 个设备"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:background="@drawable/bg_status_default"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_split_mode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="视频预览"
                android:textSize="12sp"
                android:background="@drawable/bg_button_primary"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 主内容区域 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 设备列表视图 -->
        <LinearLayout
            android:id="@+id/layout_device_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_devices"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

        </LinearLayout>

        <!-- 视频预览视图 -->
        <FrameLayout
            android:id="@+id/layout_video_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <!-- 视频预览容器 -->
            <FrameLayout
                android:id="@+id/video_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 控制按钮覆盖层 -->
            <com.example.mineguard.preview.view.ControlButtonsView
                android:id="@+id/control_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:visibility="gone" />

            <!-- 分屏模式选择器 -->
            <LinearLayout
                android:id="@+id/split_mode_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@drawable/bg_button_primary"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_mode_single"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="单画面"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="12dp" />

                <Button
                    android:id="@+id/btn_mode_quad"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="四画面"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="12dp" />

                <Button
                    android:id="@+id/btn_mode_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="九画面"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="12dp" />

                <!-- <Button
                    android:id="@+id/btn_mode_sixteen"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="十六画面"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="12dp" /> -->

            </LinearLayout>

            <!-- 视频切换按钮 -->
            <LinearLayout
                    android:id="@+id/video_switch_controls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_control_panel"
                    android:padding="8dp"
                    android:visibility="gone">                                                                                                                                                                 android:visibility="gone">

                <Button
                    android:id="@+id/btn_previous_page"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="上一页"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_secondary"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_page_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/1"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_next_page"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="下一页"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_button_secondary"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- 空状态提示 -->
        <LinearLayout
            android:id="@+id/layout_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_camera"
                android:alpha="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="暂无设备"
                android:textSize="16sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="请检查设备连接状态"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </FrameLayout>

    <!-- 底部状态栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_status_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备列表"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tv_bottom_device_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 个设备"
            android:textSize="14sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

</LinearLayout>
