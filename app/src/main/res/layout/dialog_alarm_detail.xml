<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- 标题栏 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="报警详情"
            android:textSize="20sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 图片区域 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:src="@drawable/placeholder"
            android:layout_marginBottom="16dp"
            android:contentDescription="报警图片" />

        <!-- 基本信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- 第一行：级别和状态 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="严重"
                    android:textSize="14sp"
                    android:textColor="#FF5252"
                    android:background="@drawable/bg_level_critical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未处理"
                    android:textSize="14sp"
                    android:textColor="#FF5252"
                    android:background="@drawable/bg_status_unprocessed"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <!-- 设备名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="设备名称:"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="掘进机A1"
                    android:textSize="14sp"
                    android:textColor="#212121" />

            </LinearLayout>

            <!-- 算法类型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="算法类型:"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvAlgorithmType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="人员检测"
                    android:textSize="14sp"
                    android:textColor="#212121" />

            </LinearLayout>

            <!-- 场景 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="场景:"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvScene"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="采煤工作面"
                    android:textSize="14sp"
                    android:textColor="#212121" />

            </LinearLayout>

            <!-- 区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="区域:"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="东区"
                    android:textSize="14sp"
                    android:textColor="#212121" />

            </LinearLayout>

            <!-- 报警时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="报警时间:"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2024-10-17 15:30:25"
                    android:textSize="14sp"
                    android:textColor="#212121" />

            </LinearLayout>

        </LinearLayout>

        <!-- 处理信息区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="处理信息"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 已显示的处理信息 -->
            <TextView
                android:id="@+id/tvProcessInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已处理完成，设备运行正常"
                android:textSize="14sp"
                android:textColor="#424242"
                android:background="@android:color/white"
                android:padding="8dp"
                android:visibility="gone" />

            <!-- 输入处理信息 -->
            <EditText
                android:id="@+id/etProcessInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入处理信息..."
                android:textSize="14sp"
                android:textColor="#212121"
                android:textColorHint="#9E9E9E"
                android:background="@android:color/white"
                android:padding="8dp"
                android:minHeight="80dp"
                android:gravity="top"
                android:visibility="gone" />

            <!-- 处理人 -->
            <TextView
                android:id="@+id/tvProcessor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="处理人: 张三"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <!-- 处理时间 -->
            <TextView
                android:id="@+id/tvProcessTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="处理时间: 2024-10-17 16:00:00"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="保存处理信息"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary" />

            <Button
                android:id="@+id/btnExport"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="导出图片"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_secondary" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="关闭"
                android:textSize="14sp"
                android:textColor="#757575"
                android:background="@drawable/bg_button_outline" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
